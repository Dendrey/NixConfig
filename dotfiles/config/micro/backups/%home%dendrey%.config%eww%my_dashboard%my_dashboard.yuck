(defwidget control [name icon tooltip onclick active]
  (box :class "control-container"
       :orientation "h"
       :hexpand true
       :valign "center"
       :space-evenly true
    (button :class "control-item ${name} ${active ? 'active' : ''}"
            :orientation "h"
            :space-evenly true
            :halign "center"
            :hexpand false
            :valign "center"
            :onclick "${onclick}"
            :tooltip "${tooltip}"
      (label :text "${icon}" :class "control-icon")
    )
  )
)

